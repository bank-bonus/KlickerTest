<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no, user-scalable=no, viewport-fit=cover">
    <title>Мой Кликер ВК</title>
    <style>
        body {
            font-family: -apple-system, system-ui, "Helvetica Neue", Roboto, sans-serif;
            text-align: center;
            background-color: #EBEDF0;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            height: 100vh;
        }
        h1 { color: #000; }
        .score { font-size: 40px; font-weight: bold; color: #4bb34b; margin: 20px 0; }
        button {
            background-color: #5181b8;
            color: white;
            border: none;
            padding: 20px 40px;
            font-size: 20px;
            border-radius: 12px;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.1s;
        }
        button:active { transform: scale(0.95); }
        #user-name { font-size: 14px; color: #818c99; margin-bottom: 20px; }
    </style>
</head>
<body>

    <!-- Интерфейс игры -->
    <div id="user-name">Загрузка...</div>
    <h1>Твой счет:</h1>
    <div class="score" id="score">0</div>
    <button onclick="clickBtn()">ТЫК!</button>

    <!-- Подключаем VK Bridge -->
    <script src="https://unpkg.com/@vkontakte/vk-bridge/dist/browser.min.js"></script>

    <script>
        // 1. Инициализация VK Bridge
        vkBridge.send('VKWebAppInit');

        // 2. Логика игры
        let count = 0;
        const scoreElement = document.getElementById('score');
        const userElement = document.getElementById('user-name');

        function clickBtn() {
            count++;
            scoreElement.innerText = count;
            
            // Вибрация телефона при клике (работает на Android/iOS в приложении ВК)
            if (vkBridge.isWebView()) {
                vkBridge.send("VKWebAppTapticImpactOccurred", {"style": "medium"});
            }
        }

        // 3. Получение данных пользователя (Имя)
        vkBridge.send('VKWebAppGetUserInfo')
            .then(data => {
                userElement.innerText = `Привет, ${data.first_name}!`;
            })
            .catch(error => {
                console.log(error);
                userElement.innerText = "Привет, игрок!";
            });
    </script>
</body>
</html>
